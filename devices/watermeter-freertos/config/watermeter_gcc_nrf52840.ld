/* Linker script for nRF52840 with S140 SoftDevice */

SEARCH_DIR(.)
GROUP(-lgcc -lc -lnosys)

MEMORY
{
  /* S140 7.2.0 uses 0x27000 bytes of flash */
  FLASH (rx) : ORIGIN = 0x27000, LENGTH = 0xd9000
  /* S140 7.2.0 uses 0x5968 bytes of RAM */
  RAM (rwx) :  ORIGIN = 0x20005968, LENGTH = 0x3a698
  UICR_APPROTECT (r) : ORIGIN = 0x10001208, LENGTH = 0x4
}

SECTIONS
{
  /* APPROTECT for production builds - disables SWD/JTAG */
  .uicr_approtect :
  {
    KEEP(*(.uicr_approtect))
  } > UICR_APPROTECT
}

SECTIONS
{
  . = ALIGN(4);
  .mem_section_dummy_ram :
  {
  }
  .cli_sorted_cmd_ptrs :
  {
    PROVIDE(__start_cli_sorted_cmd_ptrs = .);
    KEEP(*(.cli_sorted_cmd_ptrs))
    PROVIDE(__stop_cli_sorted_cmd_ptrs = .);
  } > RAM
  .fs_data :
  {
    PROVIDE(__start_fs_data = .);
    KEEP(*(.fs_data))
    PROVIDE(__stop_fs_data = .);
  } > RAM
  .log_dynamic_data :
  {
    PROVIDE(__start_log_dynamic_data = .);
    KEEP(*(SORT(.log_dynamic_data*)))
    PROVIDE(__stop_log_dynamic_data = .);
  } > RAM
  .log_filter_data :
  {
    PROVIDE(__start_log_filter_data = .);
    KEEP(*(SORT(.log_filter_data*)))
    PROVIDE(__stop_log_filter_data = .);
  } > RAM

} INSERT AFTER .data;

SECTIONS
{
  .mem_section_dummy_rom :
  {
  }
  .sdh_soc_observers :
